{
  "permissions": {
    "defaultMode": "default",
    "additionalDirectories": ["frontend", "backend", "docs"],
    "allow": [
      "Read(/frontend/**)",
      "Read(/backend/**)",
      "Read(/docs/**)",
      "Read(/CLAUDE.md)"
    ],
    "ask": [
      "Bash(npm run *)",
      "Bash(pnpm run *)",
      "Bash(yarn *)",
      "Bash(curl:*)"
    ],
    "deny": [
      "WebFetch",

      "Read(/.git/**)",
      "Read(/.idea/**)",
      "Read(/.vscode/**)",

      "Read(/**/.env)",
      "Read(/**/.env.*)",
      "Read(/**/.envrc)",
      "Read(/secrets/**)",

      "Read(/node_modules/**)",
      "Read(/**/node_modules/**)",

      "Read(/frontend/.nuxt/**)",
      "Read(/frontend/.output/**)",
      "Read(/frontend/dist/**)",
      "Read(/frontend/.vite/**)",
      "Read(/frontend/.turbo/**)",
      "Read(/frontend/.cache/**)",
      "Read(/frontend/.vercel/**)",
      "Read(/frontend/.netlify/**)",
      "Read(/frontend/coverage/**)",
      "Read(/frontend/logs/**)",

      "Read(/frontend/public/images/**)",
      "Read(/frontend/public/img/**)",
      "Read(/frontend/public/videos/**)",
      "Read(/frontend/public/fonts/**)",
      "Read(/frontend/assets/images/**)",
      "Read(/frontend/assets/fonts/**)",
      "Read(/frontend/static/**)",

      "Read(/frontend/app/assets/**/images/**)",
      "Read(/frontend/app/assets/**/img/**)",
      "Read(/frontend/app/assets/**/videos/**)",
      "Read(/frontend/app/assets/**/fonts/**)",
      "Read(/frontend/app/assets/**/*.{png,jpg,jpeg,gif,svg,webp,avif,ico,mp4,mov,mp3,ogg,wav,woff,woff2,ttf,otf})",

      "Read(/frontend/**/*.png)",
      "Read(/frontend/**/*.jpg)",
      "Read(/frontend/**/*.jpeg)",
      "Read(/frontend/**/*.gif)",
      "Read(/frontend/**/*.svg)",
      "Read(/frontend/**/*.webp)",
      "Read(/frontend/**/*.mp4)",
      "Read(/frontend/**/*.mov)",

      "Read(/backend/dist/**)",
      "Read(/backend/.cache/**)",
      "Read(/backend/coverage/**)",
      "Read(/backend/logs/**)",
      "Read(/backend/**/*.log)",

      "Read(/**/package-lock.json)",
      "Read(/**/yarn.lock)",
      "Read(/**/pnpm-lock.yaml)"
    ]
  },
  "env": {
    "DISABLE_TELEMETRY": "1"
  }
}
